<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/uwMetalicGold</item>
        <item name="colorPrimaryDark">@color/uwGold</item>
        <item name="colorAccent">@color/uwMetalicGold</item>
        <item name="android:textColor">@color/uwPurple</item>
        <item name="android:textSize">18dp</item>

        <item name="android:editTextColor">@color/Red</item>
        <item name="android:textColorHint">@color/uwGray</item>



    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/uwDarkGrey</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="CourseIdEditTextStyle" parent="EditTextStyle">
        <item name="android:textSize">24sp</item>
    </style>


</resources>
